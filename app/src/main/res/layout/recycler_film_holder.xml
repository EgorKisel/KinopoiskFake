<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_film_holder_style"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="220dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/posterRecyclerFilmHolder"
        tools:src="@drawable/puss_in_boots2"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/nameRecyclerFilmHolder"
        tools:text="Puss in Boots: The Last Wish"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/genreRecyclerFilmHolder"
        tools:text="Cartoon, comedy, adventure, fantasy"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/yearRecyclerFilmHolder"
        tools:text="1991"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>